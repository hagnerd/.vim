" FZF - the fuzzy finder for all of the things

Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'

let g:fzf_files_options = '--reverse --preview "(bat --color=always {}) 2> /dev/null | head -'.&lines.'"'

nnoremap <leader>o :Files<cr>
" uses $FZF_DEFAULT_COMMAND set in zshrc

" check christoomey/dotfiles if something is funky and not working

" vim:ft=vim
